<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homework3.BilibiliActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/icon_bilibili"/>

        <Button
            android:id="@+id/home_page_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="回到首页"
            android:textSize="25sp"
            android:backgroundTint="#17ABE3"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_fresh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="刷新动画"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_like_1"/>

            <ImageView
                android:id="@+id/img_like_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/icon_like_2"/>

        </FrameLayout>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/coin1"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="999+"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/favorite_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite1"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="↑ 单击/长按点赞"
        android:textSize="14sp" />

    <FrameLayout
        android:id="@+id/lay_parent"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/img_like_3"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_like_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="  （360°动画效果）单击/长按点赞 →"
            android:textSize="14sp" />

<!--        <ImageView-->
<!--            android:id="@+id/img_like_4"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:visibility="gone"-->
<!--            android:src="@drawable/icon_like_2"/>-->

    </FrameLayout>

    <Button
        android:id="@+id/btn_viewpager2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        android:text="选做 → ViewPager2"
        android:textAllCaps="false"
        android:textSize="30sp" />


</LinearLayout>