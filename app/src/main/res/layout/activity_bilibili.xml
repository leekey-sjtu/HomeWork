<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homework3.BilibiliActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/icon_bilibili"/>

        <Button
            android:id="@+id/home_page_btn"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="回到首页"
            android:textSize="25sp"
            android:backgroundTint="#17ABE3"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_bili"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="刷新"
        android:textSize="30sp"
        android:layout_marginBottom="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_like_1"/>

            <ImageView
                android:id="@+id/img_like_2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/icon_like_2"/>

        </FrameLayout>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/coin1"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/favorite_image"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite1"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="999+"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_viewpager2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text=" → ViewPager2"
        android:textAllCaps="false"
        android:textSize="30sp" />


</FrameLayout>